<Window x:Class="Presentation.EntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        Title="EntryWindow" Height="450" Width="400">
    <Grid>
        <TabControl>
            <TabItem Header="Вхід" FontFamily="{StaticResource CustomFont}" FontSize="15">
                <Grid Background="#FFFAF0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="58*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="settingsEntryEmailLabel" Content="Електронна пошта:" HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="10,30,0,0" Style="{StaticResource ModalWindowLabel}"/>
                    <TextBox HorizontalAlignment="Left" Margin="16,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Style="{StaticResource ModalWindowTextBox}"/>
                    <Label x:Name="settingsEntryPasswordLabel" Content="Пароль:" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Style="{StaticResource ModalWindowLabel}" Grid.ColumnSpan="2"/>
                    <TextBox HorizontalAlignment="Left" Margin="16,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Style="{StaticResource ModalWindowTextBox}" Grid.ColumnSpan="2"/>
                    <Button x:Name="settingsEntryButton" Grid.Column="1" Content="Увійти" HorizontalAlignment="Left" Margin="195,335,0,0" VerticalAlignment="Top" Style="{StaticResource ModalWindowButton}"/>
                </Grid>
            </TabItem>
            <TabItem Header="Реєстрація" FontFamily="{StaticResource CustomFont}" FontSize="15">
                <Grid Background="#FFFAF0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="58*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="settingsRegistrationEmailLabel" Content="Електронна пошта:" HorizontalAlignment="Left"  VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="10,30,0,0" Style="{StaticResource ModalWindowLabel}"/>
                    <TextBox HorizontalAlignment="Left" Margin="16,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Style="{StaticResource ModalWindowTextBox}"/>
                    <Label x:Name="settingsRegistrationCreatePasswordLabel" Content="Створіть пароль:" HorizontalAlignment="Left" Margin="10,112,0,0" VerticalAlignment="Top" Style="{StaticResource ModalWindowLabel}" Grid.ColumnSpan="2"/>
                    <TextBox HorizontalAlignment="Left" Margin="16,146,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Style="{StaticResource ModalWindowTextBox}" Grid.ColumnSpan="2"/>
                    <Label x:Name="settingsRegistrationConfirmPasswordLabel" Content="Повторіть пароль:" HorizontalAlignment="Left" Margin="10,195,0,0" VerticalAlignment="Top" Style="{StaticResource ModalWindowLabel}" Grid.ColumnSpan="2"/>
                    <TextBox HorizontalAlignment="Left" Margin="16,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Style="{StaticResource ModalWindowTextBox}" Grid.ColumnSpan="2"/>
                    <Button x:Name="settingsRegistrationButton" Grid.Column="1" Content="Зареєструватися" HorizontalAlignment="Left" Margin="195,335,0,0" VerticalAlignment="Top" Style="{StaticResource ModalWindowButton}"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
