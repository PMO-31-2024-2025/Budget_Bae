<Window x:Class="Presentation.SettingsNotificationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Presentation"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="#FFFAF0"
        Title="SettingsNotificationWindow" Height="70" Width="400">
    <Grid>
        <CheckBox Content="Отримувати сповіщення" Style="{StaticResource LargeCheckBoxStyle}" FontFamily="{StaticResource CustomFont}" FontWeight="SemiBold" FontSize="18" Foreground="#CC000000" Margin="10"/>
    </Grid>
</Window>
